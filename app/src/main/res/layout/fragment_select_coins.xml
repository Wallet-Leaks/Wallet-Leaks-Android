<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.main.home.selectCoins.SelectCoinsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_coin_list"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/darkBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="Coins"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/im_apply"
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_apply"
            android:visibility="gone"
            tools:visibility="visible" />
    </com.google.android.material.appbar.MaterialToolbar>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sfl_select_coins"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_coin_list"
        app:shimmer_auto_start="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />

            <include layout="@layout/item_select_coin_shimmer" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <View
        android:id="@+id/v_toolbar_stroke"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blueSentinel"
        app:layout_constraintTop_toBottomOf="@id/toolbar_coin_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_coin_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:splitMotionEvents="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_toolbar_stroke"
        tools:listitem="@layout/item_coin" />
</androidx.constraintlayout.widget.ConstraintLayout>