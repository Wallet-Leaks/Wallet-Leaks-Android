<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/im_tooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tooltip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="The minimum transaction is at least $100!"
        android:textColor="@color/blueSentinel"
        android:textSize="6sp"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="@id/im_tooltip"
        app:layout_constraintEnd_toEndOf="@id/im_tooltip"
        app:layout_constraintStart_toStartOf="@id/im_tooltip"
        app:layout_constraintTop_toTopOf="@id/im_tooltip" />

</androidx.constraintlayout.widget.ConstraintLayout>