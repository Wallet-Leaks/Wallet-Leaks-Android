<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseRootStyle">
        <item name="android:background">@color/lightBlue</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseProgressBar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/ic_progressbar_spinning</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BuyTheAppDialogBaseMaterialTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BuyTheAppDialogBaseImageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="AuthenticationTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/shadeOfSlateGray</item>
        <item name="boxBackgroundColor">@color/lightBlue</item>
        <item name="boxStrokeColor">@color/edittext_stroke_color</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="AuthenticationTextInputEditTextWithPasswordToggling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">16</item>
        <item name="android:textColor">@color/blueSentinel</item>
    </style>
</resources>