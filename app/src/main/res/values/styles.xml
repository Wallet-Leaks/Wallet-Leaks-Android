<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseRootStyle">
        <item name="android:background">@color/lightBlue</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseProgressBar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/ic_progressbar_spinning</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>